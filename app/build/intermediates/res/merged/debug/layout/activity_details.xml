<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_margin="@dimen/activity_horizontal_margin"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailProductImage"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_image_height"
        android:layout_marginBottom="@dimen/detail_image_vertical_margin"/>

    <TextView
        android:id="@+id/detailProductName"
        android:text="Product Name"
        android:textSize="@dimen/detail_title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/detail_text_margin"
        android:layout_below="@+id/detailProductImage"/>

    <TextView
        android:id="@+id/detailProductQuantity"
        android:text="Product Quantity"
        android:layout_marginBottom="@dimen/detail_text_margin"
        android:textSize="@dimen/detail_price_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailProductName"/>

    <TextView
        android:id="@+id/detailProductPrice"
        android:layout_marginBottom="@dimen/detail_text_margin"
        android:textSize="@dimen/detail_price_size"
        android:text="Product Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailProductQuantity"/>

    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:text="@string/label_button_increse_quantity"
        android:layout_alignTop="@+id/btnDecrease"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_button_decrease_quantity"
        android:layout_gravity="right"
        android:layout_below="@+id/detailProductPrice"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnOrderMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_button_order_more"
        android:layout_below="@+id/btnIncrease"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin"
        android:text="@string/label_button_delete_product"
        android:layout_below="@+id/btnOrderMore"/>
  </RelativeLayout>
</ScrollView>